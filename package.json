{
  "name": "@sylvanas-cry/json-lines-colorize",
  "version": "1.2.2",
  "description": "Colorizes the JSON-strings input stream (stdin).",
  "repository": {
    "url": "git@github.com:SylvanasCry/json-lines-colorize.git"
  },
  "homepage": "https://github.com/SylvanasCry/json-lines-colorize",
  "author": {
    "name": "Sylvanas Cry",
    "email": "sylvanas@gmx.us"
  },
  "keywords": [
    "json",
    "json-lines",
    "colorize",
    "pretty"
  ],
  "license": "MIT",
  "main": "./dist/jlc.js",
  "bin": {
    "jlc": "./dist/jlc.js"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "postclean": "npm run test",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "pretest": "npm run lint",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prebuild": "npm run clean",
    "build": "tsc"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "json-colorizer": "^2.2.2"
  },
  "devDependencies": {
    "@sylvanas-cry/eslint-config": "^1.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": "@sylvanas-cry/eslint-config"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

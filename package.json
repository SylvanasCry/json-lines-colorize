{
  "name": "@sylvanas-cry/json-lines-colorize",
  "version": "1.1.1",
  "description": "Colorizes the JSON-strings input stream (stdin).",
  "repository": {
    "url": "https://github.com/SylvanasCry/json-lines-colorize"
  },
  "homepage": "https://github.com/SylvanasCry/json-lines-colorize",
  "author": {
    "name": "Sylvanas Cry",
    "email": "sylvanas@gmx.us"
  },
  "keywords": [
    "json",
    "json-lines",
    "colorize",
    "pretty"
  ],
  "license": "UNLICENSED",
  "main": "./dist/jlc.js",
  "bin": {
    "jlc": "./dist/jlc.js"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "postclean": "npm run test",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "pretest": "npm run lint",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prebuild": "npm run clean",
    "build": "tsc",
    "publish:dry": "semantic-release --dry-run",
    "publish": "semantic-release"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "json-colorizer": "^2.2.2"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.4",
    "@sylvanas-cry/eslint-config": "file:../eslint-config/sylvanas-cry-eslint-config-1.0.0.tgz",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": "@sylvanas-cry/eslint-config"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "release": {
    "branches": ["master"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": ["package.json"],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
